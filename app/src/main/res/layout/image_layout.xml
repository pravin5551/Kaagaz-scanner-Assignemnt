<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_16sdp"
    android:layout_height="wrap_content">

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardElevation="10dp"
       app:cardCornerRadius="@dimen/_15sdp"
       android:layout_margin="2dp"
       app:cardBackgroundColor="@color/white"
       app:cardMaxElevation="12dp"
       app:cardPreventCornerOverlap="true"
       app:cardUseCompatPadding="true">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:weightSum="2"
           android:orientation="horizontal">

           <ImageView
               android:layout_width="150dp"
              android:id="@+id/Picimage"
               tools:srcCompat="@tools:sample/avatars"
               android:layout_height="@dimen/_250sdp"/>

          <RelativeLayout
              android:id="@+id/relativelayout"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <TextView
                  android:id="@+id/image_name"
                  android:layout_width="209dp"
                  android:layout_height="57dp"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:text="Kaagaz_202120731_16113262"
                  android:textColor="@color/black"
                  android:textSize="@dimen/_18sdp" />
              <ImageView
                  android:id="@+id/ivMore"
                  android:layout_width="@dimen/_25sdp"
                  android:layout_height="25dp"

                  android:layout_alignParentEnd="true"
                  android:src="@drawable/ic_baseline_more_vert_24"
                  />

              <TextView
                  android:id="@+id/tvTimeStamp"
                  android:layout_width="@dimen/_100sdp"
                  android:layout_below="@+id/image_name"
                  android:layout_marginStart="@dimen/_10sdp"
                  android:layout_marginTop="@dimen/_5sdp"
                  android:textSize="20sp"
                  android:text="Image Time"
                  android:textColor="@color/Gray"
                  android:layout_height="@dimen/_25sdp"/>

              <TextView
                  android:id="@+id/tvUnnamed_Folder"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/tvTimeStamp"
                  android:text="Unnamed Folder"
                  android:drawableStart="@drawable/ic_baseline_folder_open_24"

                  />

              <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignEnd="@+id/tvUnnamed_Folder"
                  android:layout_below="@id/tvTimeStamp"
                  android:layout_alignParentEnd="true"
                  android:src="@drawable/ic_baseline_cloud_upload_24"
                  android:padding="@dimen/_3sdp"
                  />
          </RelativeLayout>

       </LinearLayout>

   </androidx.cardview.widget.CardView>
</LinearLayout>